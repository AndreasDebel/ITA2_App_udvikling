@page "/turtle"
@using WebApp.Model


<PageTitle>Counter</PageTitle>

<h1>Turtle</h1>

<svg viewBox="0 0 500 300" xmlns="http://www.w3.org/2000/svg">
    
   
    @foreach (var line in mLines)
    {
            <line x1="@line.X1" y1="@line.Y1" x2="@line.X2" y2="@line.Y2" stroke="@line.Color" stroke-width="@line.Width"/>
    }
</svg>
@code {

    List<Line> mLines = new();

    protected override void OnInitialized()
    {
        Turtle t = new();
        DrawStar(t, 36);
        mLines = t.mLines;
    }

    private static void DrawStar(ITurtle t, int n)
    {
        double centerX = 250, centerY = 150;
        t.Up();
        t.Color = "red";
        t.MoveTo(centerX, centerY);
        t.TurnTo(0);
        t.Down();

        for (int i = 0; i < n; i++)
        {
            if (i % 2 == 0) //lige tal
                t.Width = 3;
            else
                t.Width = 1;
            t.Move(100); // her tegnes
            t.Up();
            t.MoveTo(centerX, centerY);
            t.Turn(360 / n);
            t.Down();
        }

    }
}


